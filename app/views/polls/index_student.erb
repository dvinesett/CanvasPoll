<div class="container">
    <h1>hello student</h1>
    <h3>please choose a poll to take</h3>
    <br/>
    <div class="row">
        <% @polls.each do |poll| %>
            <div class="col-xs-10 col-xs-offset-1
                        col-sm-8 col-sm-offset-2 
                        col-md-5 col-md-offset-1
                        col-lg-4 col-lg-offset-1">
                <% button_text = "Take Poll " + poll.id.to_s + ": \"" + poll.name.to_s + "\"" %>
                <%= link_to button_text, student_poll_path(poll.id), 
                    class: "btn btn-block button-color btn-lg padded-md top10" %>
            </div>
        <% end %>
    </div>
</div>